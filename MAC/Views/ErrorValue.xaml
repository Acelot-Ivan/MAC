                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0">
                            <Grid>
                                <TextBlock Text="КС - 1"
                                           Style="{StaticResource HeaderTextBlock}" />
                            </Grid>
                        </Border>
                        <Border Grid.Column="1"
                                Style="{StaticResource BorderForDecimalUpDown}">
                            <Grid>
