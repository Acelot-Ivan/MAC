<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="clr-namespace:MAC.Style.Converter">


    <converter:BooleanToVisibilityConverter x:Key="BoolToVis"
                                            True="Visible"
                                            False="Collapsed" />

    <converter:BooleanToVisibilityConverter x:Key="InvertBoolToVis"
                                            True="Collapsed"
                                            False="Visible" />

    <converter:InverseBooleanConverter x:Key="InvertBool"/>

    <converter:MilliSecToSec x:Key="MilliSecToSec"/>

</ResourceDictionary>